<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.neverpidor.presentation.fragments.menu_categories_list.MenuCategoriesListFragment"
        android:label="Меню"
        tools:layout="@layout/fragment_menu_categories_list">
        <action
            android:id="@+id/action_listFragment_to_menuItemListFragment"
            app:destination="@id/menuItemListFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/menuItemListFragment"
        android:name="com.example.neverpidor.presentation.fragments.itemlist.MenuItemListFragment"
        android:label="MenuItemListFragment"
        tools:layout="@layout/fragment_menu_item_list">
        <action
            android:id="@+id/action_menuItemListFragment_to_addBeerFragment"
            app:destination="@id/addBeerFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
        <action
            android:id="@+id/action_menuItemListFragment_to_fragmentSingleItem"
            app:destination="@id/fragmentSingleItem"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
        <argument
            android:name="category"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/addBeerFragment"
        android:name="com.example.neverpidor.presentation.fragments.addbeer.AddBeerFragment"
        android:label="AddBeerFragment"
        tools:layout="@layout/add_beer_fragment">
        <argument
            android:name="itemId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="category"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/fragmentSingleItem"
        android:name="com.example.neverpidor.presentation.fragments.singleItem.FragmentSingleItem"
        android:label="FragmentSingleItem"
        tools:layout="@layout/single_item_fragment">
        <action
            android:id="@+id/action_fragmentSingleItem_self"
            app:destination="@id/fragmentSingleItem"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
        <argument
            android:name="itemId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.neverpidor.presentation.fragments.login.LoginFragment"
        android:label="Вход"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_greetingFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
        <action
            android:id="@+id/action_loginFragment_to_listFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.neverpidor.presentation.fragments.register.RegisterFragment"
        android:label="Регистрация"
        tools:layout="@layout/register_fragment">
        <action
            android:id="@+id/action_registerFragment_to_greetingFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.neverpidor.presentation.fragments.profile.ProfileFragment"
        android:label="Изменить профиль"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_listFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.example.neverpidor.presentation.fragments.favourites.FavouritesFragment"
        android:label="Избранное"
        tools:layout="@layout/fragment_favourites">
        <action
            android:id="@+id/action_favouritesFragment_to_fragmentSingleItem"
            app:destination="@id/fragmentSingleItem"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
        <action
            android:id="@+id/action_favouritesFragment_to_listFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.neverpidor.presentation.fragments.cart.CartFragment"
        android:label="Корзина"
        tools:layout="@layout/fragment_cart">
        <action
            android:id="@+id/action_cartFragment_to_listFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
        <action
            android:id="@+id/action_cartFragment_to_fragmentSingleItem"
            app:destination="@id/fragmentSingleItem"
            app:enterAnim="@anim/slide_in_from_right"
            app:exitAnim="@anim/slide_out_to_left"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@anim/slide_out_to_right"/>
    </fragment>
</navigation>