<resources>
    <!-- Base application theme. -->
    <style name="Theme.beersApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_theme_medium</item>
        <item name="colorPrimaryVariant">@color/dark_theme_darkest</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">@color/dark_theme_lightest</item>
        <item name="colorAccent">@color/dark_theme_accent</item>
        <item name="colorError">@color/red_dark_theme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>